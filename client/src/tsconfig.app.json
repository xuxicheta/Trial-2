{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": ".",
    "module": "es2015",
    "target": "es2016",
    "types": [],
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@environments/*": ["environments/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
